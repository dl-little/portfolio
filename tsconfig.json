{
	"compilerOptions": {
        "jsx": "react-jsx",
		"target": "es5",
		"module": "es2020",
		"moduleResolution": "node",
		"baseUrl": "./",
		"strict": true,
		"skipLibCheck": true,
		"noImplicitAny": true,
		"types": ["vite/client"],
		"paths": {
			"@/*": ["resources/js/*"],
			"ziggy-js": ["./vendor/tightenco/ziggy"]
		},
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"allowImportingTsExtensions": true,
		"noEmit": true
	},
	"include": ["resources/js/**/*"]
}
